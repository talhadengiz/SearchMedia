<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_margin="@dimen/dp_8"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE">

            <TextView
                android:id="@+id/tv_movie"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text="Movies"
                android:foreground="@drawable/ripple_round_8_white"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/tv_music"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".25" />

            <TextView
                android:id="@+id/tv_music"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text="Music"
                android:foreground="@drawable/ripple_round_8_white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/tv_app"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toEndOf="@id/tv_movie"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".25" />

            <TextView
                android:id="@+id/tv_app"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text="Apps"
                android:foreground="@drawable/ripple_round_8_white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/tv_book"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toEndOf="@id/tv_music"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".25" />

            <TextView
                android:id="@+id/tv_book"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/dp_8"
                android:text="Books"
                android:foreground="@drawable/ripple_round_8_white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toEndOf="@id/tv_app"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".25" />

            <TextView
                android:id="@+id/tv_selection"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/shape_square_white"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/tv_music"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>